@{
    ViewData["Title"] = "Home Page";
}
<!----------------->
<div class="container my-4 bg-light rounded">
    <div class="row align-items-center">
        <!-- Image Column -->
        <div class="col-md-5 text-center text-md-start mb-3 mb-md-0">
            <img src="~/images/cat-dog.png" class="img-fluid ms-md-5" alt="Cute Pets" style="max-width: 400px;">
        </div>

        <!-- Text Column -->
        <div class="col-md-5 text-center text-md-start">
            <h2>Welcome to PetHome</h2>
            <h4>Here at PetHome we make sure your pet feels loved and accompanied as it would at home!</h4>
            <p class="mt-3">Our professional staff treats every pet like family, offering care, comfort, and companionship.</p>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">How It Works</h2>
        <p class="text-muted">Follow these simple steps to book the perfect stay for your pet at PetHome</p>
    </div>

    <div class="row g-4">
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4" style="background-color: #e6f7ff; border-radius: 15px;">
                    <div class="mb-3">
                        <img src="~/images/cat1.jpg" alt="Search Pets" class="rounded-circle img-fluid" style="width: 180px; height: 180px; object-fit: cover;">
                    </div>
                    <h5 class="fw-bold">Search For Pet Hotels</h5>
                    <p class="text-muted">Explore a wide range of pet hotels nearby and filter by amenities and pet type.</p>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4" style="background-color: #fff0e6; border-radius: 15px;">
                    <div class="mb-3">
                        <img src="~/images/dog1.jpg" alt="Book Hotel" class="rounded-circle img-fluid" style="width: 180px; height: 180px; object-fit: cover;">
                    </div>
                    <h5 class="fw-bold">Book a Hotel</h5>
                    <p class="text-muted">Reserve your chosen hotel easily with our quick and secure booking system.</p>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4" style="background-color: #e6ffe6; border-radius: 15px;">
                    <div class="mb-3">
                        <img src="~/images/dog2.jpg" alt="Bring Pet" class="rounded-circle img-fluid" style="width: 180px; height: 180px; object-fit: cover;">
                    </div>
                    <h5 class="fw-bold">Bring Your Pet</h5>
                    <p class="text-muted">Drop off your beloved pet and enjoy peace of mind knowing they’re in safe hands.</p>
                </div>
            </div>
        </div>
    </div>
</div>
