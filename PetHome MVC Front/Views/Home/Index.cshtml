@{
    ViewData["Title"] = "Home Page";
}
<section id="hero" class="position-relative text-light d-flex align-items-center" style="
    background: url('@Url.Content("~/images/wp.jpg")') center center/cover no-repeat;
    min-height: 100vh;
">
    <!-- Overlay for contrast -->
    <div class="overlay position-absolute w-100 h-100" style="background-color: rgba(0, 0, 0, 0.4); top:0; left:0;"></div>

    <div class="container-lg position-relative">
        <div class="row">
            <div class="col-12 col-md-8 text-center text-md-start">
                <!-- BIG Title -->
                <h1 class="display-1 fw-bold mb-4" style="line-height: 1.1;">
                    PetHome: Love & Care for Your Pets
                </h1>

                <!-- Description -->
                <p class="lead fs-4 mb-4">
                    Professional pet care, grooming, and boarding services designed to make your furry friends feel at home.
                </p>

                <!-- Buttons -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-md-start">
                    <a href="#learn" class="btn btn-primary btn-lg rounded-pill px-4 py-2 fw-bold">
                        Learn More
                    </a>
                    <a href="#purchase" class="btn btn-outline-light btn-lg rounded-pill px-4 py-2 fw-bold">
                        Book A Stay Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="services" class="py-5" style="background-color: #ffffff;">
    <div class="container-lg">
        <!-- Title -->
        <div class="text-center mb-4">
            <h2 class="fw-bold display-5">Services at PetHome</h2>
            <p class="text-muted fs-5 mt-2">We provide a wide range of professional services to make your pet happy and comfortable.</p>
        </div>

        <!-- Cards -->
        <div class="row g-4 justify-content-center">
            <!-- Service Card 1 -->
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm text-center p-3 h-100 rounded">
                    <img src="~/images/petting.jpg" class="img-fluid rounded mb-3" style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;" alt="Petting">
                    <h5 class="fw-bold mb-2">Petting</h5>
                    <p class="text-muted">Gentle and loving petting sessions to keep your furry friends happy, relaxed, and stress-free while they enjoy extra attention and care. </p>
                </div>
            </div>

            <!-- Service Card 2 -->
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm text-center p-3 h-100 rounded">
                    <img src="~/images/food.jpg" class="img-fluid rounded mb-3" style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;" alt="Feeding">
                    <h5 class="fw-bold mb-2">Feeding</h5>
                    <p class="text-muted">Scheduled feeding services using the food you provide, ensuring your pet stays nourished and healthy exactly on time.</p>
                </div>
            </div>

            <!-- Service Card 3 -->
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm text-center p-3 h-100 rounded">
                    <img src="~/images/wash.jpg" class="img-fluid rounded mb-3" style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;" alt="Washing">
                    <h5 class="fw-bold mb-2">Washing</h5>
                    <p class="text-muted">Thorough and gentle washing sessions to keep your pet clean, fresh, and comfortable, using pet-safe shampoos and techniques.</p>
                </div>
            </div>
            
            <!-- Service Card 4 -->
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm text-center p-3 h-100 rounded">
                    <img src="~/images/med.jpg" class="img-fluid rounded mb-3" style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;" alt="Medication">
                    <h5 class="fw-bold mb-2">Medication</h5>
                    <p class="text-muted">Administering medications as instructed by the owner, ensuring your pet stays healthy and safe, with careful attention to timing and dosage.</p>
                </div>
            </div>

            <!-- Add more cards as needed -->
        </div>
    </div>
</section>

<section id="faq" class="py-5 bg-gradient">
    <div class="container-lg">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Frequently Asked Questions</h2>
            <p class="text-muted">Find answers to common questions about PetHome</p>
        </div>

        <div class="accordion accordion-flush" id="faqAccordion">
            <!-- Question 1 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" aria-expanded="true" aria-controls="faq1">
                        What kind of pets can stay at PetHome?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        PetHome currently welcomes only dogs and cats. We ensure a safe and comfortable environment specifically tailored to the needs of these pets.
                        </div>
                </div>
            </div>

            <!-- Question 2 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2" aria-expanded="false" aria-controls="faq2">
                        How do I book a stay for my pet?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        You can easily book through our online platform by selecting your preferred dates, services, and any special instructions for your pet.
                    </div>
                </div>
            </div>

            <!-- Question 3 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3" aria-expanded="false" aria-controls="faq3">
                        Are pets supervised 24/7?
                    </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, our trained staff are present around the clock to ensure your pet’s safety and comfort at all times.
                    </div>
                </div>
            </div>

            <!-- Question 4 -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4" aria-expanded="false" aria-controls="faq4">
                        What should I bring when dropping off my pet?
                    </button>
                </h2>
                <div id="faq4" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        We recommend bringing your pet’s food, medications (if needed), and a favorite toy or blanket to make them feel more at home.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
